package mybankingsystem;
/*
 * The program should do the following: 
 * 1. Get the name of the cashier and use it in records
 * 2. Commit customer transactions to the account which they control
 * 3. Display records of all transactions run during the instance of 
 * the system being open
 * 
 * Structure:
 * 	Get the name of the cashier
 * 	Get the number of the cashier
 * 	1st level while loop to measure if the same cashier is using the machine
 * 		Get the name of the customer
 * 		Get account number of customer
 * 		2nd level while loop to analyze what transaction is being done
 * 			3rd Conditional to designate:
 * 				1. Deposit
 * 					Get account
 * 					Add deposit amount to account balance
 * 					Add transaction to the records
 * 				2. Withdrawal
 * 					Get account
 * 					Subtract withdrawal amount from account balance
 * 					Add transaction to the records
 * 		2rd Conditional to designate if the customer is done
 * 			1. Yes
 * 				Terminate loop
 * 			2. No
 * 				Pass loop
 * 	1st level conditional to analyze 
 * 		1. 
 * 		
 */
import java.util.Scanner;

public class MyBankingSystem {

    public static void main(String[] args) {
    Scanner input = new Scanner(System.in);
    
    //code initializations
    String actname;
    int balance[] = new int[50];
    String custname[] = new String [50];
    int num, i, ctr=0, custbal=0, withdrawal;
    
    //greetings and cashier name
    System.out.println("Welcome to the MBS Banking System!");
    System.out.print("Enter your nickname: ");
    actname = input.nextLine();
    
    //this should repeat until I press '0'
    do
    {
        System.out.print("\nWhat is the name of the customer? \n");
        custname[ctr]=input.nextLine();
        //i need to store names in an array so I can call them back in 'check records'
        System.out.println("\nWhat do you want to do today?\n");
        System.out.print("\t1 - Deposit Money\n\t2 - Withdraw\n\t3 - Check Records\n\t0 - Exit\n");
        num=input.nextInt();
        
        if (num==1)//the deposit option
        {
            System.out.print("Enter amount to deposit: ");
            balance[ctr]=input.nextInt();
            custbal=balance[ctr];
            System.out.println("Transaction done. ");
            ctr++;
        }
        
        //the withdraw option.for some reason this doesnt work
        else if (num==2)
        {
            System.out.print("Enter amount to withdraw: ");
            withdrawal=input.nextInt();
            
            for (i=1;i<ctr;i++)
            {
                balance[ctr]=custbal-withdrawal;
            }
            System.out.println("Remaining: "+balance[ctr]);
        }
        else if (num==3)//the check records option. I need to improve this
        {
            System.out.println("Records of"+custname[ctr]);
            System.out.print("Balance: "+balance[ctr]);
        }
        else if (num==0)//the exit option
        System.exit(0);
    }
    
    while(num!=0);
    }
    
}
